{
    "name": "corpus/loggers",
    "description": "Helpful PSR-3 Utility Loggers",
    "type": "library",
    "keywords": [
        "psr-3",
        "logger",
        "log",
        "logging"
    ],
    "require": {
        "psr/log": "^1",
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "donatj/drop": "^1.1",
        "phpunit/phpunit": "^9.5",
        "donatj/mddoc": "^0.4.0",
        "squizlabs/php_codesniffer": "^3.7",
        "corpus/coding-standard": "^0.6.0",
        "friendsofphp/php-cs-fixer": "^3.14"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Corpus\\Loggers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Corpus\\Loggers\\": "test/"
        }
    },
    "authors": [
        {
            "name": "Jesse Donat",
            "email": "donatj@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
